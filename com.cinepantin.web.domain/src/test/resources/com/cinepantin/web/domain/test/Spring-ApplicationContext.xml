		<class>com.cinepantin.web.domain.Article</class>
		<class>com.cinepantin.web.domain.ArticleImpl</class>
		<class>com.cinepantin.web.domain.PhysicalBook</class>
		<class>com.cinepantin.web.domain.PhysicalBookImpl</class>
	
	 -->
	
	<!-- Reste à faire gérer notre classe de tests... -->
	<bean id="testeur" class="com.cinepantin.web.domain.test.Tester">
		<!-- constructor-arg ref= "BookArticleService"/ -->
	</bean>
	
	<bean id="PhysicalBookArticleService" class="com.cinepantin.shop.service.impl.ArticleServiceImpl" scope="prototype">
		<constructor-arg ref="Article" />
	</bean>
	
	<bean id="Article" class="com.cinepantin.web.domain.Article" />
	<bean id="PhysicalBook" class="com.cinepantin.web.domain.PhysicalBook" />
	
</beans>