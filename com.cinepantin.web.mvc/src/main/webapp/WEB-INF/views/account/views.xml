	<!-- Pages -->
	<definition name="views/account/login-success" extends="layouts/public">
		<put-attribute name="title" value="Vous êtes connecté !" />
		<!-- 
		<put-attribute name="body" value="Vous avez été authentifié avec succès." />
		 -->
